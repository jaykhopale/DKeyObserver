<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:id="@+id/dkeyinfo" android:background="#FFFFFF"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:textSize="18dp" android:background="@drawable/btn_black_glossy"
		android:text="Key Information" />
	<ListView android:id="@+id/keyinfolist"
		android:layout_marginTop="5dip" android:layout_width="fill_parent"
		android:layout_below="@+id/title" android:layout_height="300dip"
		android:divider="#FFFFFF" android:background="#FFFFFF"
		android:cacheColorHint="#00000000" />

	<Button android:id="@+id/doneButton" android:text="DONE"
		android:background="@drawable/blackbgd" android:layout_width="80dip"
		android:layout_height="40dip" android:layout_below="@+id/keyinfolist"
		android:gravity="center" android:textColor="#FFFFFF"
		android:layout_centerHorizontal="true" />

</RelativeLayout>
