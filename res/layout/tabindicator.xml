<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="0dip" android:layout_height="50dip"
	android:layout_weight="1" android:orientation="vertical">

	<ImageView android:id="@+id/icon" android:layout_width="20dip"
		android:layout_height="20dip" android:layout_centerHorizontal="true"
		android:layout_marginTop="3dip" />

	<TextView android:id="@+id/tabtitle" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" android:gravity="center_horizontal"
		android:textSize="12dip" android:layout_marginBottom="2dip" />

</RelativeLayout>
