<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:padding="5dp">

	<ImageView android:id="@+id/imgIcon" android:layout_width="75dip"
		android:layout_height="100dip" android:gravity="center_vertical"
		android:layout_margin="5dp" android:cropToPadding="true" />

	<TextView android:id="@+id/txtTitle" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center_vertical"
		android:textStyle="bold" android:textSize="22dp"
		android:layout_margin="5dp" />

</LinearLayout>