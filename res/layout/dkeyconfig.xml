<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notesid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" 
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:weightSum="1" >

            <!--
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0.14"
                android:text="ToEmailID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </TextView>
            -->

            <EditText
                android:id="@+id/toemailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="@string/toEmail"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" 
                android:background="@drawable/edit_text_holo_light">

                <requestFocus>
                </requestFocus>
            </EditText>

            <!--
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:text="FromEmailID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </TextView>
            -->

            <EditText
                android:id="@+id/fromemailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fromEmail"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" 
                android:background="@drawable/edit_text_holo_light">
            </EditText>

            <!--
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:text="Subject"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </TextView>
            -->

            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/subject"
                android:inputType="textEmailSubject"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" 
                android:background="@drawable/edit_text_holo_light">
            </EditText>

            <!--
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.34"
                android:text="Message"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </TextView>
            -->

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="top"
                android:hint="@string/msg"
                android:inputType="textShortMessage"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" 
                android:background="@drawable/edit_text_holo_light">
            </EditText>

            <!--
            <TextView
                android:id="@+id/textView1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </TextView>
            -->

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user"
                android:inputType="textPersonName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" 
                android:background="@drawable/edit_text_holo_light">
            </EditText>

            <!--
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max no of Photo Attachments"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" >
            </TextView>
            -->

            <EditText
                android:id="@+id/maximages"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.17"
                android:hint="@string/maxAttach"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" 
                android:background="@drawable/edit_text_holo_light">
            </EditText>
        </LinearLayout>
    </ScrollView>

</LinearLayout>