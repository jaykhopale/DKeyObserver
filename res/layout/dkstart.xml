<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF"
	android:id="@+id/startlayout">
	<TextView android:id="@+id/startscreentext"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:layout_marginTop="100dip" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center_horizontal"
		android:text="Welcome to Phlox key" android:textSize="30sp">
	</TextView>
	<Button android:id="@+id/startbutton" android:background="@drawable/blackbgd"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" android:layout_marginBottom="60dip"
		android:layout_width="100dip" android:text="start" android:textColor="#FFFFFF"
		android:layout_height="40dip">
	</Button>
</RelativeLayout>
