<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:id="@+id/sendlayout" 
	android:background="#FFFFFF">

	<Button
	    android:id="@+id/viewobsv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/saveobs"
	    android:layout_marginTop="57dip"
	    android:background="@drawable/blackbgd"
	    android:padding="2dip"
	    android:text="View Observations"
	    android:layout_centerHorizontal="true"
	    android:layout_centerInParent="true"
	    android:layout_centerVertical="true"
	    android:textColor="#FFFFFF" />

	<Button
	    android:id="@+id/saveobs"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/sendemail"
	    android:layout_centerHorizontal="true"
	    android:layout_centerInParent="true"
	    android:layout_centerVertical="true"
	    android:layout_marginTop="54dip"
	    android:background="@drawable/blackbgd"
	    android:padding="2dip"
	    android:text="Save on Device"
	    android:textColor="#FFFFFF" />

	<Button
	    android:id="@+id/sendemail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_centerInParent="true"
	    android:layout_centerVertical="true"
	    android:layout_marginTop="60dip"
	    android:background="@drawable/blackbgd"
	    android:padding="2dip"
	    android:text="Send Email"
	    android:textColor="#FFFFFF" />

</RelativeLayout>
