<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dp">

	<TextView android:id="@+id/key" android:layout_width="120dip"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:textStyle="bold" android:textSize="15dp"
		android:layout_margin="2dp" />
	<TextView android:id="@+id/separator" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:textSize="15dp" android:layout_margin="2dp" />
	<TextView android:id="@+id/value" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_vertical"
		android:textSize="15dp" android:layout_margin="2dp" />

</LinearLayout>